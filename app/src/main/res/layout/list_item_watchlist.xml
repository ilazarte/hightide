<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">

    <TextView
        android:id="@+id/list_item_textview_security_symbol"
        android:layout_marginTop="8dp"
        android:paddingLeft="16dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="IWM"/>

    <LinearLayout
        android:orientation="vertical"
        android:layout_marginTop="8dp"
        android:paddingLeft="64dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/list_item_textview_last_update"
            android:padding="0dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="10sp"
            tools:text="12-01-2015 21:04"/>

        <TextView
            android:id="@+id/list_item_textview_data_counts"
            android:padding="0dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="10sp"
            tools:text="234, 0"/>

    </LinearLayout>

    <CheckBox
        android:id="@+id/list_item_checkbox_security_enabled"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:paddingLeft="0dp"
        android:paddingStart="0dp"
        android:paddingRight="4dp"
        android:paddingEnd="4dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <ImageButton
        android:id="@+id/list_item_imagebutton_load_file"
        android:layout_toLeftOf="@id/list_item_checkbox_security_enabled"
        android:layout_centerVertical="true"
        android:src="@drawable/ic_load_file"
        android:padding="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <ImageButton
        android:id="@+id/list_item_imagebutton_load_table"
        android:layout_toLeftOf="@id/list_item_imagebutton_load_file"
        android:layout_centerVertical="true"
        android:src="@drawable/ic_load_table"
        android:padding="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <ImageButton
        android:id="@+id/list_item_imagebutton_chart_security"
        android:layout_toLeftOf="@id/list_item_imagebutton_load_table"
        android:layout_centerVertical="true"
        android:src="@drawable/ic_chart_security"
        android:padding="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</RelativeLayout>